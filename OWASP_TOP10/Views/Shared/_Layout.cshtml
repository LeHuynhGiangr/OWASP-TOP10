<!doctype html>
<html lang="en">
<head>
    <title>OWASP_TOP10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @*<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">*@
    <link href="~/css/poppins.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">*@
    <link href="~/lib/font-awesome/font-awesome.min.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="css/style.css">*@
    <link href="~/css/style.css" rel="stylesheet" />

    @RenderSection("style", required: false)

</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <h1><a href="" class="logo">OWASP TOP 10</a></h1>/
            <ul class="list-unstyled components mb-5">
                <li @RenderSection("homepage", required: false)>
                    <a href="/"><span class="fa fa-home mr-3"></span> Homepage</a>
                </li>
                <li @RenderSection("sqlinjection", required: false)>
                    <a href="/sqlinjection"><span class="fa fa-user mr-3"></span> Sql Injection</a>
                </li>
                <li @RenderSection("xss", required: false)>
                    <a href="#"><span class="fa fa-sticky-note mr-3"></span> XSS</a>
                </li>
                <li @RenderSection("#", required: false)>
                    <a href="#"><span class="fa fa-sticky-note mr-3"></span> #</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-paper-plane mr-3"></span> Settings</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-paper-plane mr-3"></span> Information</a>
                </li>

                @RenderSection("Menu", required: false)

            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            @RenderBody()
